
    @model IEnumerable<finalproject.Models.Template>
@{
    ViewData["Title"] = "User Content Management";
}
<h2>User Content Management</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">No user-generated content found.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Template Title</th>
                <th>Created By</th>
                <th>Created At</th>
                <th>Public</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var template in Model)
            {
                <tr>
                    <td>@template.Title</td>
                    <td>@template.CreatedById</td>
                    <td>@template.CreatedAt.ToString("g")</td>
                    <td>@(template.IsPublic ? "Yes" : "No")</td>
                    <td>
                        <a href="@Url.Action("Detail", "AdminContent", new { id = template.Id })" class="btn btn-info btn-sm">View</a>
                        <a href="@Url.Action("Edit", "AdminContent", new { id = template.Id })" class="btn btn-warning btn-sm">Edit</a>
                        <a href="@Url.Action("Delete", "AdminContent", new { id = template.Id })" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
