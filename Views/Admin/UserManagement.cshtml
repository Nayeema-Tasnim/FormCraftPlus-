@model IEnumerable<finalproject.Models.UserContentGroupViewModel>

@{
    ViewData["Title"] = "User Management - Content by User";
}

<h2>User Content Management</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>User ID</th>
            <th>Templates Created</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var group in Model)
    {
        <tr>
            <td>@group.UserId</td>
            <td>@group.ContentCount</td>
            <td>
                <a asp-controller="AdminContent"
                   asp-action="UserContent"
                   asp-route-userId="@group.UserId"
                   class="btn btn-sm btn-primary">
                    View Content
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>
